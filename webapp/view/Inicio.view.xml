<mvc:View
    controllerName="becloud.cl.project1.controller.Inicio"
    xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:sf="sap.ui.layout.form" xmlns:f="sap.f" xmlns:l="sap.ui.layout"
	xmlns:fb="sap.ui.comp.filterbar" height="100%">
><Page id="idPageMain" class="contenedorButtonMenuH" showFooter="false" showHeader="false" backgroundDesign="Transparent">
		<content>
			 <l:Grid vSpacing="0,1" hSpacing="0,1" width="100%">
                <l:Grid visible="false" id="gridContentId" vSpacing="0,1" hSpacing="0,1" width="100%">
                <VBox class="cursorDefault backCyanSecundario" width="100%" height="9.6vh"><!--{oModelSettingsheightHeader}-->
                    <VBox width="100%">
                        <l:Grid vSpacing="0,1" hSpacing="1" width="100%">
								<!-- SECCION DEL LOGO -->
								<VBox width="100%" justifyContent="Center" height="{oModelSettings>/heightHeader}">
									<Image press="clicEnElLogo" class="imageWhite outlineOff" src="{oModelSettings>/pathPortal}/img/Empresas_Gasco.png" width="13rem"></Image>
									<layoutData>
										<l:GridData span="XL2 L3 M4 S5"/>
									</layoutData>
								</VBox>
								<!-- SECCION DE BUSQUEDA -->
								<VBox width="100%" justifyContent="Center" height="9.6vh"> <!--"{oModelSettings>/heightHeader}"-->
									<Toolbar width="100%" design="Transparent" style="Clear">
										<Input width="400px" showValueHelp="false" suggestionItemSelected="onPressNodoBusqueda" filterSuggests="false"
											suggestionItems="{ path: 'modeloSuggestionItemSearch>/', sorter: { path: 'RESULTADO' } }"
											placeholder="{oModelSettings>/placeholgerBusquePortal}" liveChange="searchHeader" value="{modelView>/valueInputBusqueda}"
											valueHelpRequest="openPopoverBuscar" showSuggestion="true" autocomplete="true" maxSuggestionWidth="auto">
											<suggestionItems>
												<core:ListItem text="{modeloSuggestionItemSearch>RESULTADO}" additionalText="{modeloSuggestionItemSearch>TIPO}"/>
											</suggestionItems>
										</Input>
										<Button class="buttonMenu grid" id="idButtonVaciarBusquedaId" visible="{modelView>/visibleBottonVaciarBusqueda}" type="Transparent"
											icon="sap-icon://sys-cancel-2" press="vaciarInputBusqueda"></Button>
										<Button class="buttonMenu" type="Transparent" icon="sap-icon://vertical-grip" press="openPopoverBuscar"></Button>
									</Toolbar>
									<layoutData>
										<l:GridData span="XL6 L5 M5 S5"/>
									</layoutData>
								</VBox>
								<!-- SECCION DE BOTONES -->
								<HBox width="100%" justifyContent="End" alignItems="Center" height="{oModelSettings>/heightHeader}">
									<!-- SELECCIÓN PORTAL -->
									<HBox tooltip="Aprobación Documentos" class="sapUiTinyMarginEnd" width="auto" height="{oModelSettings>/heightHeader}" alignItems="Center"
										justifyContent="Center" visible="{oModelSettingsAdmin>/visibleButtonModeAprobador}">
										<core:Icon src="sap-icon://bell" size="1.3rem" color="#ffffff" class="cursorPointer marginTop3px" press="redireccionAprobacionDocumentos"></core:Icon>
										<Label id="oTextNotificationId" text="{oModelSettingsAdmin>/textLabelButtonNotification}" design="Bold"
											class="notification-Label non-selectable cursorPointer"></Label>
									</HBox>
									<MenuButton class="buttonMenu grid" icon="sap-icon://grid" type="Transparent">
										<menu>
											<Menu items="{oModelListaDePortales>/}">
												<MenuItem text="{oModelListaDePortales>NOMBREPORTAL}" press="seleccionarPortal"/>
												<!--icon="sap-icon://shield"-->
											</Menu>
										</menu>
									</MenuButton>
									<!-- DATOS DEL USUARIO -->
									<MenuButton id="oMenuButtonUserId" class="buttonMenu" icon="sap-icon://account" text="{oModelSettings>/nombreUsuarioConectado}" width="auto"
										type="Transparent">
										<menu>
											<Menu>
												<MenuItem visible="{oModelSettings>/visibleButtonModeMenu}" text="Volver a la Página Principal" icon="sap-icon://home" press="navToHomeShow"/>
												<MenuItem text="{oModelSettings>/textButtonModeMenu}" icon="{oModelSettings>/iconButtonModeMenu}" press="changeMenu"/>
												<MenuItem visible="{oModelSettingsAdmin>/visibleButtonModeAdmin}" text="Reportería" icon="sap-icon://multiple-line-chart"
													press="redireccionReportes"/>
												<!--<MenuItem visible="{oModelSettingsAdmin>/visibleButtonModeAprobador}" text="Aprobación Documentos" icon="sap-icon://bbyd-active-sales"
													press="redireccionAprobacionDocumentos"/>-->
												<MenuItem visible="{oModelSettings>/visibleButtonModeMenu}" text="Salir" icon="sap-icon://log" press="logOutPortal"/>
												<MenuItem visible="{ path: 'oModelSettings>/visibleButtonInvitadoMenu', formatter: '.formatterVisibleIniciarSesion' }" text="Iniciar Sesión"
													icon="sap-icon://visits" press="logOutPortal"/>
											</Menu>
										</menu>
									</MenuButton>
									<layoutData>
										<l:GridData span="XL4 L4 M3 S2"/>
									</layoutData>
								</HBox>
							</l:Grid>




	                </VBox>
						<layoutData>
							<l:GridData span="XL12 L12 M12 S12"/>
						</layoutData>

                </VBox>

                </l:Grid>
                <MessagePage class="messagePageMobile" showHeader="false" icon="sap-icon://sys-monitor"
					description="Este aplicativo solo está disponible para computador de escritorio." text="Dispositivo No Compatible.">
					<layoutData>
						<l:GridData span="XL12 L12 M12 S12" visibleS="true" visibleM="true" visibleL="false" visibleXL="false"/>
					</layoutData>
				</MessagePage>



            </l:Grid>
		</content>
	</Page>
</mvc:View>
